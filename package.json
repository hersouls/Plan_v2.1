{
  "name": "moonwave-plan",
  "description": "Moonwave Plan - 가족과 함께하는 스마트한 할일 관리",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5173 --host",
    "dev:clean": "node scripts/port-cleanup.js && npm run dev",
    "clean:vite": "node scripts/vite-cleanup.js",
    "dev:fresh": "npm run clean:vite && npm run dev:clean",
    "check:vite": "node scripts/check-vite-response.js",
    "build": "tsc -b && vite build",
    "build:vercel": "vite build",
    "build:check": "node scripts/build-check.js",
    "build:production": "npm run lint:prod && npm run type-check:prod && npm run test:ci && npm run build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:prod": "eslint src --ext .ts,.tsx --config eslint.config.production.js --max-warnings 50",
    "preview": "vite preview --port 4173",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --passWithNoTests --silent --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:sequential": "TEST_SEQUENTIAL=true playwright test",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome'",
    "test:setup:env": "node scripts/setupTestEnvironment.js",
    "test:setup:full": "npm run test:setup:env && npm run firebase:setup-test-data",
    "type-check": "tsc --noEmit",
    "type-check:prod": "tsc --project tsconfig.build.json --noEmit",
    "quality:check": "npm run lint:prod && npm run type-check:prod",
    "clean": "rm -rf dist node_modules/.vite",
    "analyze": "vite-bundle-analyzer dist",
    "build:analyze": "npm run build && node scripts/build-analysis.js",
    "build:prod": "NODE_ENV=production npm run build:production && npm run analyze",
    "ci:check": "npm run quality:check && npm run test:ci",
    "firebase:init": "firebase init",
    "firebase:deploy": "firebase deploy --only firestore,functions,storage",
    "firebase:deploy:functions": "firebase deploy --only functions",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules,storage:rules",
    "functions:deploy": "node scripts/deploy-functions.js",
    "functions:deploy:prod": "node scripts/deploy-functions.js --production",
    "security:check": "node scripts/security-check.js",
    "pwa:check": "node scripts/pwa-check.js",
    "test:setup": "node scripts/test-setup.js",
    "vercel:build": "npm run build:production",
    "vercel:dev": "vercel dev",
    "deploy:check": "node scripts/deploy.js",
    "deploy:prod": "node scripts/deploy.js --production && npm run build:production",
    "pre-deploy": "node scripts/pre-deployment.js",
    "deploy:ready": "npm run ci:check && npm run pre-deploy && echo 'Ready for deployment!'",
    "setup": "npm install && npm run quality:check",
    "firebase:setup-test-data": "node scripts/setupTestData.js",
    "firebase:clear-data": "firebase firestore:delete --all-collections --yes",
    "firebase:setup-cors": "node scripts/setup-storage-cors.js",
    "claude:test-api": "node scripts/test-claude-api.js",
    "mcp:start": "node scripts/mcp-task-server.js",
    "mcp:test": "node -e \"console.log('Testing MCP server...'); require('./scripts/mcp-task-server.js')\""
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-context-menu": "^2.2.15",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-hover-card": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-menubar": "^1.1.15",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toggle": "^1.1.9",
    "@radix-ui/react-toggle-group": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/container-queries": "^0.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.1",
    "firebase": "^12.1.0",
    "i18next": "^23.16.8",
    "jsqr": "^1.4.0",
    "lucide-react": "^0.534.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-day-picker": "^9.8.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.3",
    "react-qr-code": "^2.0.18",
    "react-router-dom": "^6.23.1",
    "recharts": "^3.1.2",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-bundle-analyzer": "^0.16.1",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
