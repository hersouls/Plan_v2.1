{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    // More lenient for build process
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "src/**/__tests__/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/setupTests.ts",
    // Exclude problematic utility files during build
    "src/utils/seed-data.ts",
    "src/lib/migration.ts",
    "src/utils/db-operations.ts",
    "src/pages/PointsManagement.refactored.tsx"
  ]
}
